generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
  schemas  = ["blytz_hire"]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String // "company" | "va"
  createdAt DateTime @default(now())

  vaProfile VAProfile?
  company   Company?
  payments  Payment[]

  @@map("users")
  @@schema("blytz_hire")
}

model VAProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  name         String
  country      String
  hourlyRate   Int
  skills       String[]
  availability Boolean  @default(true)
  email        String? // Contact info (locked until payment)
  phone        String? // Contact info (locked until payment)

  user       User        @relation(fields: [userId], references: [id])
  matchVotes MatchVote[]
  matches    Match[]

  @@map("va_profiles")
  @@schema("blytz_hire")
}

model Company {
  id      String  @id @default(cuid())
  userId  String  @unique
  name    String
  country String
  email   String? // Contact info (locked until payment)

  user        User         @relation(fields: [userId], references: [id])
  jobPostings JobPosting[]

  @@map("companies")
  @@schema("blytz_hire")
}

model JobPosting {
  id          String  @id @default(cuid())
  companyId   String
  title       String
  description String
  rateRange   String
  isActive    Boolean @default(true)

  company    Company     @relation(fields: [companyId], references: [id])
  matchVotes MatchVote[]
  matches    Match[]

  @@map("job_postings")
  @@schema("blytz_hire")
}

model MatchVote {
  id            String   @id @default(cuid())
  jobPostingId  String
  vaProfileId   String
  voteByCompany Boolean?
  voteByVA      Boolean?
  createdAt     DateTime @default(now())

  jobPosting JobPosting @relation(fields: [jobPostingId], references: [id])
  vaProfile  VAProfile  @relation(fields: [vaProfileId], references: [id])

  @@unique([jobPostingId, vaProfileId])
  @@map("match_votes")
  @@schema("blytz_hire")
}

model Match {
  id              String   @id @default(cuid())
  jobPostingId    String
  vaProfileId     String
  paymentStatus   String   @default("pending") // "pending" | "paid" | "failed"
  contactUnlocked Boolean  @default(false)
  createdAt       DateTime @default(now())

  jobPosting JobPosting @relation(fields: [jobPostingId], references: [id])
  vaProfile  VAProfile  @relation(fields: [vaProfileId], references: [id])
  payments   Payment[]

  @@unique([jobPostingId, vaProfileId])
  @@map("matches")
  @@schema("blytz_hire")
}

model Payment {
  id                    String   @id @default(cuid())
  matchId               String
  userId                String // Payer (company user)
  stripePaymentIntentId String   @unique
  amount                Int // in cents
  status                String // "succeeded" | "pending" | "failed"
  stripeFee             Int? // Stripe processing fee
  platformFee           Int? // Our platform fee
  createdAt             DateTime @default(now())

  match Match @relation(fields: [matchId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@map("payments")
  @@schema("blytz_hire")
}
